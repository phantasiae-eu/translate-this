{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "react-native/react-native": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended", "plugin:react/recommended", "prettier", "plugin:prettier/recommended"
    ],
    "plugins":["react", "react-native", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings":  {
        "react":  {
          "version":  "detect"
        }
      },
      "rules": {
        "prettier/prettier": "error"
      }
}